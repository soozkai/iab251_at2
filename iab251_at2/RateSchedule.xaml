<Window x:Class="iab251_at2.RateSchedule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Rate Schedule" Height="450" Width="600">
    <Grid Margin="10">
        <TextBlock Text="Rate Schedule" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!--Creat the data grid for the information to go into-->
        <DataGrid x:Name="RateScheduleDataGrid" AutoGenerateColumns="False" HeadersVisibility="Column" Margin="0,50,0,40">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
                <DataGridTextColumn Header="20 Feet Container" Binding="{Binding Fee20Ft}" Width="*" />
                <DataGridTextColumn Header="40 Feet Container" Binding="{Binding Fee40Ft}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>