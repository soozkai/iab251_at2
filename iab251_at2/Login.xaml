<Page x:Class="iab251_at2.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Log In">

    <Grid Margin="0,0,0,4">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <!-- Title -->
            <TextBlock Text="Log In" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <!-- Username -->
            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameTextBox" Height="30" Margin="0,0,0,10"/>

            <!-- Password -->
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,20"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Log In" Width="120" Click="LoginButton_Click" Background="#FF8C00" Foreground="White" Margin="10"/>
                <Button Content="Cancel" Width="120" Click="CancelButton_Click" Background="Gray" Foreground="White" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
